                @Html.DropDownList("KewanId", String.Empty)
                @Html.ValidationMessageFor(model => model.KewanId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KembangId, "KembangId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KembangId", String.Empty)
                @Html.ValidationMessageFor(model => model.KembangId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

